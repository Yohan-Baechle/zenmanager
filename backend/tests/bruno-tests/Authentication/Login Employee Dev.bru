meta {
  name: Login Employee Dev
  type: http
  seq: 3
}

post {
  url: {{base_url}}/login_check
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "username": "employee_dev1",
    "password": "password"
  }
}

script:post-response {
  if (res.status === 200) {
    bru.setEnvVar("employee_token", res.body.token);
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.status).to.equal(200);
  });

  test("Response should contain token", function() {
    expect(res.body.token).to.be.a('string');
  });
}